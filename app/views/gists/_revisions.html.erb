<%= link_to "Gist Detail", @gist %>
<br>
<div class="commits-recent">
  <h5> Revisions </h5>
  <ul class="unstyled">
    <% gist.recent_commits.each do |c| %>
      <li> 
        <a href="<%= revisions_path(gist, c.sha) %>"><abbr class="sha" title="<%= c.sha %>"><%= c.pretty_sha %></abbr></a>
        <abbr class="timeago " title="<%= (time = c.created_at.getutc).iso8601 %>"> <%= time.to_s %></abbr>
      </li>
    <% end %>
  </ul>
</div>
